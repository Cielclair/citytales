.bar {
position: fixed;
}

.card {
  width:100%;
  height: 46vh;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 5px; /* 5px rounded corners */
}

.story-img {
  border-radius: 5px 5px 0 0;
  width: 100%;
  height: 80%;
  display: block;
}

.info-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 20%;
}

.info-section .info-left {
  width: 90%;
  display: flex;
  justify-content: left;
  align-items: center;
}

.info-section .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.info-section .h1 {
  font-style: bold;
  font-size: 36rpx;
  text-align: bottom;
  width: 70%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.top-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}


.page-section-gap{
  box-sizing: border-box;
  padding: 0 20rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.bar {
  /* padding: 5rpx; */
  margin: 10rpx auto;
}

.index-container {
  height: 95vh;
  width: 100%;
  background-color: azure;
}

.ad-hoc-card {
  width: 100%;
  margin: 10rpx auto;
  background-color: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: top;
  overflow: hidden;
  height: 100%;
}

.map-container {
  position: relative;
}

.ad-hoc-card-container {
  margin: 0 20rpx;
  width: 50%;
  position: absolute;
  bottom: 250rpx;
  height: 400rpx;
}

.event-info {
  display: flex;
  justify-content: left;
  align-items: center;
  margin: 0rpx;
  width: 100%;
  padding: 20rpx 0;
  height: 20%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.event-info .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.event-info .user-story {
  font-style: bold;
  font-size: 32rpx;
  text-align: bottom;
  width: 70%;
  margin-left: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}