<!--pages/userprofile/userprofile.wxml-->
<view class="header">
    <image  class= "avatar" mode = "aspectFill" src = "../../images/citytales.jpg" />
    <view class="user-info">

      <view class="user-name">城事Official Account</view>
      <view class="user-bio">城事，我们的故事</view>

      <view class="follows">
        <view class="liked">
          <text>10</text>
          <text>ta的城事</text>
        </view>
        <view class="saved">
          <text>8</text>
          <text>ta的喜欢</text>
        </view>
      </view>
    </view>
</view>

<view class="bar">
  <wux-segmented-control class="switch-bar" values="{{ ['ta的城事', 'ta的喜欢'] }}" bind:change="onChange" />
</view>

